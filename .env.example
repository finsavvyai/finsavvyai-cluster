# Application Settings
APP_NAME=FinSavvyAI RAG Server
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://rag_user:your_password@localhost:5432/finsavvy_rag
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# External Services
LLM_SERVICE_URL=http://localhost:8001
EMBEDDING_SERVICE_URL=http://localhost:8002
USE_MOCK_LLM=true

# Document Processing
MAX_FILE_SIZE=104857600
UPLOAD_DIR=uploads
SUPPORTED_FORMATS=pdf,docx,txt,md,html,json,csv,pptx,rtf,odt

# Chunking Configuration
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
MAX_CHUNK_SIZE=8000

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# Search Configuration
DEFAULT_SEARCH_LIMIT=5
MAX_SEARCH_LIMIT=50
DEFAULT_MIN_SCORE=0.7

# Performance Settings
MAX_WORKERS=4
CACHE_TTL=3600
REQUEST_TIMEOUT=30

# Logging
LOG_LEVEL=INFO

# Security
API_KEY_LENGTH=32
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30